@startuml Hercycle Use Case Diagram

!define ICONURL https://raw.githubusercontent.com/tupadr3/plantuml-icon-font-sprites/v2.4.0
skinparam actorStyle awesome
skinparam packageStyle rectangle
skinparam defaultFontName Segoe UI

title Hercycle Educational Platform - Use Case Diagram

left to right direction

actor "Student/Child\n(Age 10-18)" as Student #LightPink
actor "System\n(Automated)" as System #LightGray

rectangle "Hercycle Educational Platform" {

    package "Authentication System" #LightBlue {
        usecase "Sign Up with\nAge Verification" as UC1
        usecase "Login" as UC2
        usecase "Logout" as UC3
        usecase "Verify\nAuthentication Token" as UC4
    }

    package "Profile Management" #LightGreen {
        usecase "View Profile" as UC5
        usecase "Update Profile\nInformation" as UC6
        usecase "View Personal\nStatistics" as UC7
    }

    package "Module Learning System" #Wheat {
        usecase "Browse All\nModules" as UC8
        usecase "Filter Modules\nby Category" as UC9
        usecase "View Module\nDetails" as UC10
        usecase "Read Module\nContent" as UC11
        usecase "Start Module" as UC12
        usecase "Complete Module" as UC13
        usecase "Track Module\nProgress" as UC14
    }

    package "Quiz System" #LightCoral {
        usecase "Take Quiz" as UC15
        usecase "Submit Quiz\nAnswers" as UC16
        usecase "View Quiz\nResults" as UC17
        usecase "View Quiz\nExplanations" as UC18
        usecase "Retry Quiz" as UC19
        usecase "View Quiz\nHistory" as UC20
    }

    package "Dashboard & Progress" #Lavender {
        usecase "View Dashboard" as UC21
        usecase "View Overall\nProgress" as UC22
        usecase "View Recent\nActivity" as UC23
        usecase "View Next\nRecommended Module" as UC24
    }

    package "Gamification System" #Gold {
        usecase "Earn Points" as UC25
        usecase "Level Up" as UC26
        usecase "View Current\nLevel" as UC27
        usecase "Maintain Daily\nStreak" as UC28
        usecase "Earn Badges/\nAchievements" as UC29
        usecase "View Badge\nCollection" as UC30
    }
}

